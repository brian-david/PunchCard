<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Punchcard.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="30">
            <Label Text="login page" HorizontalOptions="Center" FontSize="Large" Margin="60">
                 <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="Comfortaa.ttf#Comfortaa"/>    
                    </OnPlatform>
                </Label.FontFamily>
            </Label>
            <Entry Placeholder="email" Keyboard="Email" x:Name="userEmail"/>
            <Entry Placeholder="password" IsPassword="true" x:Name="userPassword"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Login" Clicked="loginMethod" HorizontalOptions="Center" CornerRadius="25" BackgroundColor="Transparent"/>
                <Button Text="Register" Clicked="registerMethod" HorizontalOptions="Center" CornerRadius="25" BackgroundColor="Teal"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>